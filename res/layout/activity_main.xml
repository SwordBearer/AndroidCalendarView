<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mycalendar="http://schemas.android.com/apk/res/xmu.swordbearer.customviews"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <xmu.swordbearer.customviews.CalendarView
        android:id="@+id/calendarview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EEC900"
        mycalendar:cellTextSize="12sp"
        mycalendar:lineColor="#c0c0c0"
        mycalendar:lineWidth="1dp"
        mycalendar:showLines="true"
        mycalendar:showWeekLabel="true"
        mycalendar:validCellTextColor="#218868" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    &lt;&lt;    " />

        <Button
            android:id="@+id/btnDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  2012-01  " />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    >>    " />
    </LinearLayout>

</LinearLayout>